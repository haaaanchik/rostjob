                - pr_employee_cvs.decorate.each do |pr_emp|
                  - employee_cv = pr_emp.employee_cv.decorate
                  - pe_form = "#{render partial: 'profile/favorites/interview_date'}"
                  .card.card-success.card-in-list.collapsed-card.moveable data-emp-cv-id="#{employee_cv.id}" data-proposal-emp-id="#{pr_emp.id}"
                    span type="button" class="interview-date-show" data-toggle="popover" data-placement="top" data-html='true' data-content=pe_form
                    .card-header.card-header-in-list
                      p.initials.text-white data-card-widget="collapse"
                        = link_to employee_cv.name, edit_profile_employee_cv_path(employee_cv), class: 'white-text', remote: true
                      .card-tools.d-none
                        button.btn-info aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" type="button"
                          i.fas.fa-ellipsis-h
                        .dropdown-menu x-placement="bottom-start" style="position: absolute; transform: translate3d(0px), 38px, 0px); top: 0px; left: 0px; will-change: transform;"
                          = link_to 'Отправить',
                                  profile_favorites_path(employee_cv_id: employee_cv),
                                  class: 'dropdown-item',
                                  data: { type: :script },
                                  remote: true
                          = link_to 'Изменить',
                                    edit_profile_employee_cv_path(employee_cv),
                                    class: 'dropdown-item',
                                    remote: true
                          a.comment-emp-cv.dropdown-item href="#"  Комментарий
                          .dropdown-divider
                          = link_to 'Удалить',
                                    profile_employee_cv_path(employee_cv),
                                    data: {confirm: 'Удалить анкету?'},
                                    class: 'dropdown-item',
                                    method: :delete,
                                    remote: true

                    .card-body
                      p.card_phone_number = employee_cv.phone_number
                      .card_bottom
                        = text_area_tag :comment,
                                        employee_cv.comment,
                                        class: 'card_textarea js-call-popup default-scroll',
                                        placeholder: 'Напишите комментарий…',
                                        style: 'overflow-y: scroll; overflow-wrap: break-word;',
                                        dir: 'auto',
                                        data: { date: employee_cv.reminder_date,
                                                time: employee_cv.reminder_time }
                        = employee_cv.display_reminders
