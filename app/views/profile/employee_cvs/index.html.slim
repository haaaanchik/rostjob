.crm-list
  .grey.lighten-4.text-center.main-workspace
    .row.ml-0.mr-0#main_row
      .popup
        h4
          | Напоминание
          = image_tag('/img/close-black.png', class: 'close')
        .popup__header#reminder_popup
          .popup-date
            p.title Дата
            = text_field_tag :reminder_date, nil, placeholder: '01.01.2001', class: 'popup-input'
          .popup-time
            p.title Время
            = time_field_tag :reminder_time, nil, placeholder: '23:59', class: 'popup-input'
        .popup__body
          .reminder_date_datepicker.d-flex.justify-content-center
        .popup__footer
          button class="btn btn-sm add-reminder" Сохранить
          button class="btn btn-sm close-reminder" Убрать


      // добавить
      #add.card.card-primary.custom-column
        .card-header style="background-color: transparent;"
          h3.card-title.m-auto
            button.btn.btn-block type='button' id='add_column'
              i.fas.fa-plus.mr-1
              | Добавить колонку

      // Готовые
      .card.card-primary.custom-column.mb-2.mb-sm-0.p-1
        .card-header.mb-2
          h3.card-title.js-title.mb-0 Готовые
          input.js-clicked-input type='text' value=''

        = link_to new_profile_employee_cv_path,
                  class: 'btn btn-block add-card m-auto',
                  remote: true do
          i.fas.fa-plus.mr-1
          | Добавить анкету
        = render partial: 'employee_cv', locals: { employee_cvs: @paginated_employee_cvs.ready.without_reminders,
                                                   state:        'ready' }

      // С напоминанием
      .card.card-primary.custom-column.mb-2.mb-sm-0.p-1
        .card-header.mb-2
          h3.card-title.js-title.mb-0 C напоминанием
          input.js-clicked-input type="text" value=""
        = link_to new_profile_employee_cv_path(state: 'reminder'),
                class: 'btn btn-block add-card m-auto',
                remote: true do
          i.fas.fa-plus.mr-1
          | Добавить анкету
        = render partial: 'employee_cv', locals: { employee_cvs: @paginated_employee_cvs.with_reminders,
                                                   state:        'reminder' }

    // Избранные
    .card.card-primary.custom-column.chosen
      .card-header
        h3.card-title.mb-0.text-white
          span.star ★
          | Избранное
      .card-body.card-scroll-window
        - @favorites.each do |favorite|
          - pr_employee_cvs = favorite.without_paid_revoked_employees
          - next if favorite.completed? && pr_employee_cvs.empty?
          .moveable.card.card-list data-order-id="#{favorite.id}"
            .card-header
              h3.card-title.text-left.mb-0 №#{favorite.title_with_skill}
              p.salary.text-left = favorite.salary
              .number_of_people
                span.number_of_people_span #{favorite.contractor_price} / чел
              p.work_area.text-left = favorite.production_site.title
              .card-tools
                button.btn-info aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" type="button"
                  i.fas.fa-ellipsis-h
                .dropdown-menu style="position: absolute; transform: translate3d(0px), 38px, 0px); top: 0px; left: 0px; will-change: transform;" x-placement="bottom-start"
                  a.dropdown-item data-remote="true" data-type="script" href="/profile/favorites?employee_cv_id=10962"  Отправить
                  a.dropdown-item data-remote="true" href="/profile/employee_cvs/10962/edit"  Изменить
                  a.comment-emp-cv.dropdown-item href="#"  Комментарий
                  .dropdown-divider
                  a.dropdown-item data-confirm=("Удалить анкету?") data-method="delete" data-remote="true" href="/profile/employee_cvs/10962" rel="nofollow"  Удалить
              = image_tag('/img/new/arrow-down.png', class: 'arrow js-arrow')

