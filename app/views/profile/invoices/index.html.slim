ruby:
  unpaid_invoice= @invoices.created.present?

#main_personalAccount
  section.personalAccount
    header Лицевой счет

    .personalAccount_balance
      p
        | Баланс:
        span #{ @current_profile.balance.amount } руб.

    .personalAccount_operations
      button.btn-open#operations
        span Операции
        i.fa.fa-angle-right.fa-rotate-90.fa-2x

  section.personalAccount_open.close
    .personalAccount_open_table
      table
        thead
          tr
            th Дата
            th Описание операции
            th Приход
            th Расход

        tbody
          = render @current_profile.balance.bill_transactions.order(id: :desc).limit(10)

  section.allAccounts
    header Все счета

    .allAccounts_button
      button.btn-open
        span Подробнее
        i.fa.fa-angle-right.fa-rotate-90.fa-2x

  section.allAccounts_open.close
    .allAccounts_open_table
      table
        thead
          tr
            th Номер
            th Дата
            th Баланс
            th Статус
            th Действия

        tbody
          = render @invoices.persisted

  section.replenishAccount data-unpaid-invoice=unpaid_invoice.to_s
    header Пополнить счет
    = render partial: 'form'
