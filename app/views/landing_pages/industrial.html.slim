javascript:
    let arr = document.querySelectorAll('.js-show-more');
    for (let i = 0; i < arr.length; i++) {
        arr[i].addEventListener('click', openDropdown);
    }

    function openDropdown(e) {
        $('.js-dropdown').not(e.target.nextElementSibling).removeClass('open');
        let target = e.target;
        if (target.classList.contains('show-more')) {
            target.nextElementSibling.classList.toggle('open');
        }
    }

    // Modal
    $('.js-call-modal').on('click', openModal);

    if (window.location.search == '?modal=request_call') {
      openModal()
    }

    function openModal() {
        $('#modal').addClass('open');
    }

    $('#overlay').on('click', closeModal);
    $('.js-close-modal').on('click', closeModal);

    function closeModal() {
        $('#modal').removeClass('open');
    }

    $('#overlay .form').on('click', function (e) {
        e.stopPropagation();
    })
