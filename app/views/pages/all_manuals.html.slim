  ul
    - if (user_signed_in? && current_user.profile.customer?) || !user_signed_in?
      li = link_to 'Как опубликовать заявку?', page_path('manual_create_order')
      li = link_to 'Как пополнить баланс?', page_path('manual_how_to_pay_order')
      li = link_to 'Как назначить собеседование?', page_path('manual_how_to_set_date_interview')
