      li = link_to 'Что такое статус анкет?', page_path('manual_what_is_the_status_of_proposed_employees')
      li = link_to 'Как осуществить поиск анкеты?', page_path('manual_how_to_search_for_a_profile_recruter')
      li = link_to 'Как стать самозанятым?', page_path('as_an_individual')

