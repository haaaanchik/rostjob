      li =  link_to 'Как отправить анкету?', page_path('manual_how_send_emp')
      li = link_to 'Как изменить дату прибытия соискателя?', page_path('manual_correct_date_interview')
      li = link_to 'Как получить вознаграждение?', page_path('manual_how_get_money')
