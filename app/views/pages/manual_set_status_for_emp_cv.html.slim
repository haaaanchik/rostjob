      = link_to image_path('/img/manuals/emp_cv/1.jpg'), data: { lightbox: "images" }, class: 'text-center my-3 rounded mx-auto z-depth-2' do
        = image_tag '/img/manuals/emp_cv/1_mini.jpg'
