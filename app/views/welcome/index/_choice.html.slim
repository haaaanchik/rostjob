- content_for :meta do
  title Рекрутеры на портале RostJob
  meta name='description' content='RostJob - Участвуй в системе подбора персонала от ведущей HR компании.'
  - if Rails.env.production?
    meta name='yandex-verification' content='b44acbed235a946c'

.recruter
  .choose-recruter
    .img-container
      = image_tag '/img/girl.png', class: 'img-responsive'
    .choose-content
      h2.title Я рекрутер
      p.description Хочу зарабатывать на поиске персонала
      = link_to 'Перейти', landing_for_contractor_path, class: 'recruter-btn'
  = image_tag '/img/clouds_l.png', class: 'clouds-left'
  = image_tag '/img/rectangle_l.png', class: 'rectangle-left'
.customer
  .choose-customer
    .img-container
      = image_tag '/img/man.png', class: 'img-responsive'
    .choose-content
      h2.title Я заказчик
      p.description.pl-1 Хочу, чтобы мне подобрали персонал
      = link_to 'Перейти', landing_for_customer_path, class: 'customer-btn'
  = image_tag '/img/clouds_r.png', class: 'clouds-right'
  = image_tag '/img/rectangle_r.png', class: 'rectangle-right'

scss:
  #navbar {
    position: absolute;
    height: 74px;
    width: 100%;
    z-index: 3;
    display: flex;
    align-items: center;
    padding-left: 8.28%;  //левый отступ
    justify-content: space-between;
    padding-right: 70px; // правый отступ
  }

  #navbar > div {
    display: flex;
  }

  @media (max-width: 600px) {
    #navbar {
      padding: 0 10px;
    }
  }
