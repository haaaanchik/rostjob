- errors = @user.errors.messages
= form_for @user, method: :post, url: user_registration_path, html: {class: 'text-center p-3 mb-2'} do |f|
  .md-form.mb-5
    = f.label :full_name, t("views.modals.signin.full_name")
    = f.text_field :full_name, class: "form-control #{'is-invalid' unless errors[:full_name].empty?}"
    .invalid-feedback = errors[:full_name].first
  .md-form.mb-5
    = f.label :email, t("views.modals.signin.email")
    = f.email_field :email, class: "form-control #{'is-invalid' unless errors[:full_name].empty?}"
    .invalid-feedback = errors[:email].first
  .md-form.mb-5
    = f.label :password, t("views.modals.signin.password")
    = f.password_field :password, class: "form-control #{'is-invalid' unless errors[:full_name].empty?}"
    .invalid-feedback = errors[:password].first
  .md-form.mb-5
    = f.label :password_confirmation, t("views.modals.signin.password_confirmation")
    = f.password_field :password_confirmation, class: "form-control #{'is-invalid' unless errors[:full_name].empty?}"
    .invalid-feedback = errors[:password_confirmation].first
  .form-group.mt-4
    = f.check_box :terms_of_service, class: 'form-check-input'
    = f.label :terms_of_service, class: 'from-check-label' do
      'Принять
      = link_to 'условия и положения', '#', class: 'blue-text'
  .d-flex.justify-content-center
    = f.submit t("views.modals.signin.customer"), name: :customer, class: 'btn btn-deep-orange z-depth-1 disabled'
